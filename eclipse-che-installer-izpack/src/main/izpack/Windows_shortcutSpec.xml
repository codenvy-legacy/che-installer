<izpack:shortcuts version="5.0"
                  xmlns:izpack="http://izpack.org/schema/shortcuts"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://izpack.org/schema/shortcuts http://izpack.org/schema/5.0/izpack-shortcuts-5.0.xsd">

    <skipIfNotSupported/>
    <defaultCurrentUser/>

    <programGroup defaultName="Eclipse Che ${project.version}" location="applications"/>

    <shortcut
            name="Open Eclipse Che"
            programGroup="yes"
            desktop="yes"
            applications="no"
            startMenu="no"
            startup="no"
            workingDirectory=""
            target="http://localhost:8080"
            description="Open Eclipse Che">
    </shortcut>

    <shortcut
            name="Eclipse Che (start)"
            programGroup="yes"
            desktop="yes"
            applications="no"
            startMenu="no"
            startup="no"
            workingDirectory="$INSTALL_PATH"
            target="$INSTALL_PATH\bin\che.bat"
            commandLine="run"
            description="Starts $APP_NAME $APP_VER">
    </shortcut>

    <shortcut
            name="Eclipse Che (stop)"
            programGroup="yes"
            desktop="yes"
            applications="no"
            startMenu="no"
            startup="no"
            workingDirectory="$INSTALL_PATH"
            target="$INSTALL_PATH\bin\che.bat"
            commandLine="stop"
            description="Stop $APP_NAME $APP_VER">
    </shortcut>

    <shortcut
            name="Eclipse Che Documentation"
            programGroup="yes"
            desktop="no"
            applications="no"
            startMenu="no"
            startup="no"
            workingDirectory=""
            target="http://localhost:8080"
            description="Documentation of Eclipse Che">
    </shortcut>


</izpack:shortcuts>
